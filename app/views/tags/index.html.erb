<%= render 'layouts/container' %>

<h1>Tags</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <div class="container">
          <td>
              <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3 col-lx-3">
                      <%= tag.name %>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Show', tag, :class => "btn btn-success", :role => "button"  %></p>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Edit', edit_tag_path(tag), :class => "btn btn-info", :role => "button"  %></p>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button"  %></p>
                    </div>

              </div>
          </td>
       </div>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Tag', new_tag_path, :class => "btn btn-primary", :role => "button" %></p>

<%= render 'layouts/container_end' %>
