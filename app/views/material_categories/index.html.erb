<% content_for :title do %>Material Categories<% end %>
<%= render 'layouts/container' %>
<h1>Material Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @material_categories.each do |material_category| %>
      <tr>
        <div class="container">
          <td>
              <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3 col-lx-3">
                      <%= material_category.name %>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Show', material_category, :class => "btn btn-success", :role => "button"  %></p>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Edit', edit_material_category_path(material_category), :class => "btn btn-info", :role => "button"  %></p>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Destroy', material_category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button"  %></p>
                    </div>

              </div>
          </td>
       </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Material Category', new_material_category_path, :class => "btn btn-primary", :role => "button" %></p>

<%= render 'layouts/container_end' %>