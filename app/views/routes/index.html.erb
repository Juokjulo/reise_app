<%= render 'layouts/container' %>
<h1>Routes</h1>

    <% @routes.each do |route| %>
      <p>
      <div class="card" >
        <div class="card-header" >
          <h4 class="card-title">
            <%= route.title %>
          </h4>
        </div>
          <p class="card-text">      
          <%== route.maplink %>
          <%== route.description %>
          </br>
          <%= link_to 'Live tracking Garmin (only for family)', route.garminlink %>
          <% if current_user.try(:admin?) %>
            <%= link_to 'Show', route %>
            <%= link_to 'Edit', edit_route_path(route) %>
            <%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %>
           <% end %>
          </p>      
      </div>
      </p>
    <% end %>

<br>
<% if current_user.try(:admin?) %>
<%= link_to 'New Route', new_route_path %>
<% end %>

<%= render 'layouts/container_end' %>
