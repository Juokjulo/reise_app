<%= render 'layouts/container' %>

<h1>Travel Tipps Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @travel_tipps_categories.each do |travel_tipps_category| %>
      <tr>
         <div class="container">
          <td>
              <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3 col-lx-3">
                      <%= travel_tipps_category.name %>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Show', travel_tipps_category, :class => "btn btn-success", :role => "button"  %></p>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Edit', edit_travel_tipps_category_path(travel_tipps_category), :class => "btn btn-primary", :role => "button"  %></p>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-lx-3">
                      <p><%= link_to 'Destroy', travel_tipps_category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button" %></p>
                    </div>

              </div>
          </td>
       </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New Travel Tipps Category', new_travel_tipps_category_path, :class => "btn btn-primary", :role => "button"  %>
</p>

<%= render 'layouts/container_end' %>
