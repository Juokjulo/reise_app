<% content_for :title do %>Newsletters<% end %>
<%= render 'layouts/container' %>

<h1>Newsletters</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th> title letter sent</th>
    </tr>
  </thead>

  <tbody>
    <% @newsletters.each do |newsletter| %>
      <tr <%== 'class = "bg-info"' if newsletter.sent %>
          <%== 'class = "bg-warning"' if !newsletter.sent %> >

        <div class="container">
          <td>
          <div class="row">
              <div class="col-sm-12 col-md-4 col-lg-4 col-lx-4">
                <%= newsletter.title %>
              </div>
              <div class="col-sm-12 col-md-7 col-lg-7 col-lx-7">
                <%= newsletter.letter[0..200]  %>
              </div>
              <div class="col-sm-12 col-md-1 col-lg-1 col-lx-1" <%== 'style = "color: green"' if newsletter.sent %>
              <%== 'style = "color: red"' if !newsletter.sent %> >
                <%= newsletter.sent%>
              </div>

              <div class="col-sm-4 col-md-4 col-lg-4 col-lx-4">
                <p><%= link_to 'Show', newsletter, :class => "btn btn-success", :role => "button"  %></p>
              </div>
              <div class="col-sm-4 col-md-4 col-lg-4 col-lx-4">
                <p><%= link_to 'Edit', edit_newsletter_path(newsletter), :class => "btn btn-primary", :role => "button"  %></p>
              </div>
              <div class="col-sm-4 col-md-4 col-lg-4 col-lx-4">
                <p><%= link_to 'Destroy', newsletter, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button"  %>
                </p>
              </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p><%= link_to 'New Newsletter', new_newsletter_path, :class => "btn btn-primary", :role => "button" %></p>

 <%= render 'layouts/container_end' %>
