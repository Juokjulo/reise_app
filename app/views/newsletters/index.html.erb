<% content_for :title do %>Newsletters<% end %>
<%= render 'layouts/container' %>

<h1>Newsletters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Letter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsletters.each do |newsletter| %>
      <tr>
        <td><%= newsletter.title %></td>
        <td><%= newsletter.letter %></td>
        <td><%= link_to 'Show', newsletter, :class => "btn btn-success", :role => "button"  %></td>
        <td><%= link_to 'Edit', edit_newsletter_path(newsletter), :class => "btn btn-info", :role => "button"  %></td>
        <td><%= link_to 'Destroy', newsletter, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p><%= link_to 'New Newsletter', new_newsletter_path, :class => "btn btn-primary", :role => "button" %></p>

 <%= render 'layouts/container_end' %>
