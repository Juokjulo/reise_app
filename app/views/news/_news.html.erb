
<% @news.each do |news| %>

        <p style=<%= "color:" + news.color  %> >
        <%== "<h3 style='color:" + news.color + "'>" if (news == @news.first) %>
        <%= news.text %>
        <%= link_to news.text_link, news.link, style:"color:" + news.color  %>
        <%== "</h3>" if (news == @news.first) %>
        <% if current_user.try(:admin?) %>
          <%= link_to 'Show', news %>
          <%= link_to 'Edit', edit_news_path(news) %>
          <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </p>
<% end %>


