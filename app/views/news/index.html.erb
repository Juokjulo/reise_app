<p id="notice"><%= notice %></p>
<%= render 'layouts/container' %>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Text link</th>
      <th>Link</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.text %></td>
        <td><%= news.text_link %></td>
        <td><%= news.link %></td>
        <td><%= news.color %></td>
        <td><%= link_to 'Show', news, :class => "btn btn-success", :role => "button"  %></td>
        <td><%= link_to 'Edit', edit_news_path(news), :class => "btn btn-primary", :role => "button"  %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New News', new_news_path, :class => "btn btn-primary", :role => "button"  %></p>

<%= render 'layouts/container_end' %>
