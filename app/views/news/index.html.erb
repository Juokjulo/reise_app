<%= render 'layouts/container' %>

<h1>News</h1>

<% @news.each do |news| %>
  <b><%= news.created_at.strftime("%A, the %-d %B %Y") %></b>
  <p>
  <%== news.text  %>
  </p>

 <% if current_user.try(:admin?) %>
  <%= link_to 'Show', news %>
  <%= link_to 'Edit', edit_news_path(news) %>
  <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
 <% end %> 
<% end %>


<br>
<% if current_user.try(:admin?) %>
<%= link_to 'New News', new_news_path %>
 <% end %>

<%= render 'layouts/container_end' %>