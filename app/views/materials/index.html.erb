<% content_for :title do %>Materials<% end %>
<%= render 'layouts/container' %>

<h1>Materials</h1>

<% @material_categories.each do |material_category| %>
  <h2><%= material_category.name %></h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Sponsor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @materials.each do |material| %>
        <% if material.material_category == material_category %>
        <tr>
          <td><%= material.name %></td>
          <td><%= material.sponsor %></td>
          <% if current_user.try(:admin?) %>
            <td><%= link_to 'Show', material %></td>
            <td><%= link_to 'Edit', edit_material_path(material) %></td>
            <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>
<% if current_user.try(:admin?) %>
  <%= link_to 'New Material', new_material_path %>
<% end %>
<%= render 'layouts/container_end' %>
